<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.UtilsPages.ViPham.ListViPham">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="listView" 
              Margin="0,10,0,0" ItemSelected="OnListViewItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation = "Horizontal" Margin = "10,10,10,10">
                                <Label Text = "{Binding Name}" FontSize="Header"/>
                                <Label Text = "{Binding Name}" FontSize="Header"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>